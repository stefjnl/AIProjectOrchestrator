@page
@model AIProjectOrchestrator.API.Pages.PromptPlaygroundModel
@{
    ViewData["Title"] = "Prompt Playground";
}

<div class="container">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center mb-md">
            <h1>Prompt Playground</h1>
        </div>

        <div class="d-flex" style="height: 600px;">
            <!-- Left Sidebar - Template Manager -->
            <div class="w-25 pr-md" style="border-right: 1px solid var(--color-gray-200);">
                <div class="d-flex justify-content-between align-items-center mb-md">
                    <h3>Prompt Templates</h3>
                    <button id="newTemplateBtn" class="btn btn-primary" aria-label="Create new template">+ New</button>
                </div>

                <ul id="templateList" class="list-none p-0" role="list">
                    <!-- Templates will be populated by JavaScript -->
                </ul>
            </div>

            <!-- Main Editor Area -->
            <div class="flex-grow-1 d-flex flex-column ml-md">
                <input type="hidden" id="currentTemplateId" />

                <div class="form-group">
                    <label for="templateTitle" class="form-label">Template Title</label>
                    <input type="text" id="templateTitle" class="form-input" placeholder="Enter template title"
                        required />
                </div>

                <div class="form-group flex-grow-1">
                    <label for="templateContent" class="form-label">Prompt Content</label>
                    <textarea id="templateContent" class="form-textarea" style="font-family: var(--font-mono);"
                        placeholder="Enter your prompt content using {{variables}} for dynamic values"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-md">
                    <div>
                        <button id="saveTemplateBtn" class="btn btn-primary">Save Template</button>
                        <button id="cancelBtn" class="btn btn-secondary hidden">Cancel</button>
                    </div>
                    <button id="generateBtn" class="btn btn-success">Generate</button>
                </div>

                <!-- Response Area -->
                <div class="mt-lg">
                    <div class="d-flex justify-content-between align-items-center mb-sm">
                        <h3>Response</h3>
                        <button id="copyResponseBtn" class="btn btn-secondary hidden"
                            aria-label="Copy response to clipboard">Copy</button>
                    </div>
                    <div id="responseLoading" class="d-flex justify-content-center align-items-center hidden"
                        style="height: 100px;">
                        <div class="loading"></div>
                    </div>
                    <div id="responseArea" class="border rounded p-md"
                        style="min-height: 100px; background: var(--color-gray-50);">
                        <p id="responseContent" class="mb-0"
                            style="font-family: var(--font-mono); white-space: pre-wrap;"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div id="toastContainer" class="position-fixed bottom-0 right-0 p-md" style="z-index: 1000;"></div>

@section Scripts {
    <script src="~/js/prompt-playground.js"></script>
}